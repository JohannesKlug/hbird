		<camel:route id="Thunderbird-recorded-tm">
			<camel:from uri="file:/tmp/flight-1-rename/?moveFailed=./badFrames/${file:name.noext}&amp;sortBy=${file:name};noop=true"></camel:from>
			<camel:to uri="bean:frameDecoder?method=decode"></camel:to>
			<camel:split>
				<camel:method ref="packetDecoder" method="decode"/>
				<camel:convertBodyTo type="org.hbird.transport.commons.data.GenericPayload" />
				<camel:to uri="bean:payload-codec?method=decode" />
				<camel:aggregate strategyRef="aggregatorStrategy" completionTimeout="10000">
				 	<camel:correlationExpression>
                		<camel:simple>${body} != null</camel:simple>
            		</camel:correlationExpression>
            		<camel:to uri="bean:multiListTypeConverter" />
            		<camel:marshal><camel:csv/></camel:marshal>
            		<camel:to uri="file:/tmp/thunderbird-tm.csv" />
				</camel:aggregate>
			</camel:split>
		</camel:route>
		
