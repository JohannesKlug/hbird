<?xml version="1.0"?>
<project xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd" xmlns="http://maven.apache.org/POM/4.0.0"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<modelVersion>4.0.0</modelVersion>
	
	<parent>
		<artifactId>hummingbird-core</artifactId>
		<groupId>org.hbird.core</groupId>
		<version>0.0.1-SNAPSHOT</version>
	</parent>
	
	<artifactId>space-system-publisher</artifactId>
	<name>Hbird :: Core :: Space System Publisher</name>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
	</properties>
	
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<executions>
					<execution>
						<id>bundle-manifest</id>
						<phase>process-classes</phase>
						<goals>
							<goal>manifest</goal>
						</goals>
					</execution>
				</executions>
				<configuration>
					<instructions>
						<Bundle-Version>${project.version}</Bundle-Version>
						<Export-Package>
							org.hbird.core.spacesystempublisher, 
							org.hbird.core.spacesystempublisher.publishing,
							org.hbird.core.spacesystempublisher.interfaces 
						</Export-Package>
					</instructions>
				</configuration>
			</plugin>
			
			<plugin>
				<groupId>org.maven.ide.eclipse</groupId>
				<artifactId>lifecycle-mapping</artifactId>
				<version>0.9.9-SNAPSHOT</version>
				<configuration>
					<mappingId>generic</mappingId>
					<configurators></configurators>
					<mojoExecutions></mojoExecutions>
				</configuration>
			</plugin>
		</plugins>
	</build>
	
	<dependencies>
		<dependency>
			<groupId>org.hbird.core</groupId>
			<artifactId>space-system-model</artifactId>
			<version>0.0.1-SNAPSHOT</version>
		</dependency>
		<dependency>
			<groupId>org.apache.camel</groupId>
			<artifactId>camel-core</artifactId>
		</dependency>
		<dependency>
			<groupId>org.apache.camel</groupId>
			<artifactId>camel-spring</artifactId>
		</dependency>
	</dependencies>
	
	<packaging>bundle</packaging>
	<description>This bundle provides Hbird space system model publication services. It allows clients to retrive space system model information, update the model, and register for updates to the model.</description>
	
</project>