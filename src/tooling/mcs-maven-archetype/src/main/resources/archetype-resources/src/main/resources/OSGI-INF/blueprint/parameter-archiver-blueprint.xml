<?xml version="1.0" encoding="UTF-8"?>
<blueprint	xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
       		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
			xmlns:cm="http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0"
       		xmlns:camel="http://camel.apache.org/schema/blueprint"
       		xmlns:ext="http://aries.apache.org/blueprint/xmlns/blueprint-ext/v1.2.0"
       		xsi:schemaLocation="
       			http://www.osgi.org/xmlns/blueprint/v1.0.0 http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
       			http://camel.apache.org/schema/blueprint http://camel.apache.org/schema/blueprint/camel-blueprint.xsd 
       			http://aries.apache.org/blueprint/xmlns/blueprint-cm/v1.1.0 http://svn.apache.org/repos/asf/aries/trunk/blueprint/blueprint-cm/src/main/resources/org/apache/aries/blueprint/compendium/cm/blueprint-cm-1.1.0.xsd">

	<!-- OSGI blueprint property placeholder -->
    <cm:property-placeholder 
    	id="archive-properties" 
    	persistent-id="org.hbird.${mcs-name}.archiving"
    	placeholder-prefix="${ARC:"  
    	update-strategy="reload">
    </cm:property-placeholder>

	<bean id="hbirdMongo" class="com.mongodb.Mongo">
		<argument index="0" value="${ARC:mongoDbHost}"/>
	</bean>
	
	<bean id="camelEndMongoStrat" class="org.hbird.application.parameterarchive.mongodb.CamelEndpointMongoServiceStrategy"></bean>
	
	<bean id="parameterArchiveQuerySender" 
		  class="org.hbird.application.parameterarchive.mongodb.MongoDbParameterQuerySender">
		<property name="mongoService" ref="camelEndMongoStrat"></property>
	</bean>
	
	<service id="parameterArchiveQueryService" 
			 interface="org.hbird.application.parameterarchive.interfaces.ParameterQuerySender"
			 ref="parameterArchiveQuerySender">
	</service>

</blueprint>
